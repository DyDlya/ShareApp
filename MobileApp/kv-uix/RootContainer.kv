#:kivy 2.1.0


<RootContainer>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        size_hint: 0.7,0.2
        size_hint_max_x: 350
        size_hint_min_x: 299
        size_hint_max_y: 242
        size_hint_min_y: 170
        spacing: 10
        orientation: "vertical"
        TextInput:
            multiline: False
            focus: True
            hint_text: "Логин"
            size: 299,60

            pos_hint: {'center_x':0.5 }
        TextInput:
            multiline: False
            size: 299,60


            hint_text: "Пароль"
            pos_hint: {'center_x':0.5 }
            password: True
        Button:
            text: "Войти"
            size: 299,60
            pos_hint: {'center_x':0.5 }
    